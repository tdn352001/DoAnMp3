        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/mppro"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoAnMp3"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:targetApi="m">
        <activity
            android:name=".NewActivity.SingerActivity"
            android:exported="true"/>
        <activity
            android:name=".NewActivity.ChangeInfoUserActivity"/>
        <activity android:name=".NewActivity.MainActivity">

        </activity>
        <activity android:name=".Activity.LoginActivity"/>
        <activity android:name=".NewActivity.PlaySongsActivity" />
        <activity android:name=".NewActivity.SongsListActivity" />
        <activity android:name=".NewActivity.SearchActivity" />
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.AddBaiHatActivity" />
        <activity android:name=".Activity.DetailUserPlaylistActivity" />
        <activity android:name=".Activity.UserInfoActivity" />
        <activity android:name=".Activity.DetailSingerActivity" />
        <activity android:name=".Activity.DanhSachBaiHatActivity" />
        <activity android:name=".Activity.AllCategoryActivity" />
        <activity android:name=".Activity.AllSingerActivity" />
        <activity android:name=".Activity.AllSongActivity" />
        <activity android:name=".Activity.AllAlbumActivity" />
        <activity android:name=".Activity.AllPlaylistActivity" />
        <activity android:name=".Activity.PlayNhacActivity" />
        <activity android:name=".Activity.MainActivity" />

        <service android:name=".Service.MusicService" />
        <service android:name=".Service.MusicForegroundService" />

        <receiver android:name=".Application.BroadcastReceiver" />
    </application>

</manifest>