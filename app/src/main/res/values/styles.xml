<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LoginTextInputLayoutOutline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/boxInputFields</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="LoginTextInputEditTextOutline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#0d6e6a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RoundedButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="elevation">20dp</item>
        <item name="backgroundTint">#099A94</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">44dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">32dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">8dp</item>
    </style>

    <style name="IconButton" parent="RoundedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">12dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">8dp</item>
    </style>

    <style name="SettingsButton" parent="IconButton">
        <item name="android:textColor">#403F40</item>
        <item name="iconTint">#403F40</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="iconSize">18dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="LoginGoogle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="android:text">@string/login_with_google</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="elevation">20dp</item>
        <item name="icon">@drawable/ic_google</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">28dp</item>
        <item name="iconTint">@null</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="BtnViewMore" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">8dp</item>
        <item name="strokeWidth" tools:ignore="NewApi">1dp</item>
        <item name="android:strokeColor" tools:ignore="NewApi">@color/primaryColor</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded_top</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

</resources>