<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Fragment.MainFragment.SongPlayingFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thumbnail_song_playing"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_disk"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tv_info_song_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/dancingscript_variablefont_wght"
        android:gravity="center_horizontal"
        android:maxWidth="120mm"
        android:maxLines="1"
        android:text="@string/dang_tai"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="InOrMmUsage" />

</LinearLayout>