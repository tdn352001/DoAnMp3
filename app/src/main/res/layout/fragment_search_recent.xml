<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_recent_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/txt_history_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_vertical"
                        android:text="@string/search_recent"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_delete_history_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="bottom"
                        android:padding="8dp"
                        android:text="@string/delete"
                        android:textColor="#024560"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <com.wefika.flowlayout.FlowLayout
                    android:id="@+id/layout_key_word_recent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/custom_item_search_recent"
                        android:text="Cô định cắm sừng tôi đấy à"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/custom_item_search_recent"
                        android:text="Tôi nổi tiếng"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/custom_item_search_recent"
                        android:text="Đẹp trai"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/custom_item_search_recent"
                        android:text="Nhà giàu"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/custom_item_search_recent"
                        android:text="Đi xe đẹp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/custom_item_search_recent"
                        android:text="Tôi có gì không tốt?"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@drawable/custom_item_search_recent"
                        android:text="Tốt"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />
                </com.wefika.flowlayout.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_category_search_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_category_recent_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/category"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_category_recent_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="-10dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>