<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/txt_title_dialog_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/background_rounded_top"
        android:text="@string/change_password"
        android:textAlignment="center"
        android:textColor="#FD0012"
        android:paddingVertical="10dp"
        android:textSize="45sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput_password_change"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_dialog_password"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/black"
        app:endIconMode="password_toggle"
        app:helperText="Nhập Mật Khẩu Hiện Tại"
        app:hintTextColor="@color/black"
        app:placeholderText="Mật Khẩu Hiện Tại">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mat_khau"
            android:inputType="textPassword"
            android:maxLength="12"
            android:padding="15dp"
            android:textColorHint="#000"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput_password_change_newpass"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textinput_password_change"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/black"
        app:endIconMode="password_toggle"
        app:helperText="Nhập Mật Khẩu Mới"
        app:hintTextColor="@color/black"
        app:placeholderText="Mật Khẩu Mới">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password_change_newpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:padding="15dp"
            android:textColorHint="#000"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput_pasword_change_checkpass"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textinput_password_change_newpass"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/black"
        app:endIconMode="password_toggle"
        app:helperText="Xác Nhận Lại Mật Khẩu"
        app:hintTextColor="@color/black"
        app:placeholderText="Xác Nhận Mật Khẩu">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password_change_cpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:padding="15dp"
            android:textColorHint="#000"
            android:textSize="22sp" />


    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textinput_pasword_change_checkpass"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:paddingHorizontal="7dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cofirm_change_password"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:backgroundTint="#04868A"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="7dp"
            app:elevation="15dp"
            app:strokeColor="@color/black"
            tool:targetApi="lollipop" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_change_password"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="90dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="7dp"
            app:elevation="15dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />


    </LinearLayout>


</RelativeLayout>