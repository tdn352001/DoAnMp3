<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity.SingerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layout_app_bar_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:fitsSystemWindows="true"
        app:elevation="40dp"
        tools:targetApi="lollipop">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layout_collapsing_tool_bar_detail_object"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scrollbarStyle="insideOverlay"
            app:expandedTitleGravity="start|bottom"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleCollapseMode="fade">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/thumbnail_detail_object"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_gravity="start"
                android:elevation="15dp"
                android:layout_marginBottom="100dp"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:src="@drawable/baihat"
                app:layout_scrollFlags="enterAlways"
                app:riv_corner_radius_bottom_left="16dp"
                app:riv_corner_radius_bottom_right="16dp"
                tools:ignore="InOrMmUsage"
                tools:targetApi="lollipop" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_action_follow"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:paddingVertical="12dp"
                    android:text="@string/follow"
                    android:textColor="#ECEDED"
                    app:cornerRadius="25dp"
                    app:elevation="12dp"
                    app:strokeColor="#ECEDED" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_action_play_song"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:backgroundTint="#8946AD"
                    android:paddingVertical="12dp"
                    android:text="@string/play_song"
                    android:textColor="@color/white"
                    app:cornerRadius="25dp"
                    app:elevation="12dp" />

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_name_singer"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="35dp"
                app:layout_collapseMode="pin"
                tools:targetApi="lollipop" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#f21" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#09C1EF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#f21" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#09C1EF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#f21" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#09C1EF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#f21" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#09C1EF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#f21" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#09C1EF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#f21" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#09C1EF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#f21" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#09C1EF" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>